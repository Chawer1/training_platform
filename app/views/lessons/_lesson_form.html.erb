<!-- app/views/lessons/_lesson_form.html.erb -->

<%= form_with(model: [@course, Lesson.new], local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <!-- Add other lesson fields here as needed -->

  <div class="actions">
    <%= form.submit "Create Lesson" %>
  </div>
<% end %>
