<h1><%= @course.title %></h1>

<p><%= @course.description %></p>

<h2>Lessons</h2>

<ul>
  <% @course.lessons.each do |lesson| %>
    <li>
      <h3><%= lesson.title %></h3>
      <p><%= lesson.description %></p>
    </li>
  <% end %>
</ul>

<% if @course.owned_by?(current_user) && current_user.teacher? %>
  <%= link_to 'Edit Course', edit_course_path(@course), class: 'btn btn-primary' %>
<% end %>
