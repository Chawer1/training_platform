<h1><%= @task.name %></h1>
<p><%= @task.description %></p>
<p>Materials: <%= @task.materials %></p>
<p>Status: <%= @task.status %></p>
<% if @course.owned_by?(current_user) && current_user.teacher? %>
  <%= link_to 'Редактировать задание', edit_course_lesson_task_path(@course, @lesson, @task), class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Back to lesson', course_lesson_path(@course, @lesson), class: 'btn btn-primary' %>
